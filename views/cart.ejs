<%- include("partials/header.ejs") %>
  <% let sum=0 %>

    <section class="cart">
      <div class="container">
        <h1>Welcome to GroStore</h1>

        <% if( items.length <= 0){ %>
          <h3> Your have not anything in your cart</h3>
          <% } else { %>

            <h3>Take your favourites Item :-</h3>

            <div class="table-responsive">
              <table class="table caption-top table-hover table-bordered">
                <caption>List of your favourite products</caption>

                <thead>
                  <tr>
                    <th scope="col">S.No.</th>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Remove </th>
                  </tr>
                </thead>

                <% items.forEach( ( item ,index)=>{ %>
                  <!-- item is a object inside cartSchema(item + quantity + uniqueId) , and second item is the Item schema item -->

                  <tbody class="table-group-divider">
                    <tr>
                      <th scope="row">
                        <%= index+1 %>
                      </th>
                      <td>
                        <%= item.item.product %>
                      </td>
                      <td>
                        <%= item.quantity %>
                      </td>
                      <td>
                        <%= item.quantity * item.item.realprice %>
                      </td>
                      <td>
                        <a href="/mycart/remove/<%= item.uniqueId %>/" class="btn text-danger">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                            class="bi bi-trash3" viewBox="0 0 16 16">
                            <path
                              d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                          </svg>
                        </a>
                      </td>
                      <!-- calculate the total price (using js in ejs file) start-->
                      <% sum=sum + item.quantity * item.item.realprice %>
                        <!-- calculate the total price (using js in ejs file)  end -->
                    </tr>
                  </tbody>
                  <% }) %>

              </table>
            </div>

            <div class="total-price text-primary">
              Total Price :- <h2>
                <%= sum %>
              </h2>
            </div>

          <% } %>

      

      </div>
    </section>


    <%- include("partials/footer.ejs") %>